{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@events": ["./src/events/index"],
			"@events/*": ["./src/events/*"],
			"@commands*": ["./src/commands*"],
			"@utils*": ["./src/utils*"],
			"@services*": ["./src/services*"]
		}
	}
}