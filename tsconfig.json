{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@*": ["src/*"]
		}
	}
}